{
    "iteration_limit": 100000,
    "learning_rate": 0.1,

    "ej1": {
        "min_error": 1.00,
        "training_set": "and",
        "input": {
            "and": [[-1, 1], [1, -1], [-1, -1], [1, 1]],
            "xor": [[-1, 1], [1, -1], [-1, -1], [1, 1]]
        },
        "expected": {
            "and": [-1, -1, -1, 1],
            "xor": [1, 1, -1, -1]
        }
    },
    "ej2": {
        "epsilon": 0.01,
        "data_path": "./data/ej2-conjunto.csv",
        "activation_function": "logistic",
        "beta": 1
    },
    "ej3": {
        "dataset": "even_numbers",
        "activation": {
            "function": "tanh",
            "beta": 1
        },
        "optimization": {
            "method": "gradient_descent",
            "learning_rate": 0.1,
            "momentum": 0.9
        },
        "hidden_layers": [10, 10, 10],
        "target_error": 0.01,
        "max_epochs": 1000,
    
        "training_strategy": "batch",
        "batch_size": 1
    }
}
